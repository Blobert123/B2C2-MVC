@model IEnumerable<Product>

@{
    ViewData["Title"] = "Menu";
}
<h1>@ViewData["Title"]</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Het menu</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Menu" asp-action="Create" class="btn btn-primary">
                Nieuw product toevoegen
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                Prijs
            </th>
            <th>
                Beschrijving
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td width="10%">
                    @item.Naam
                </td>
                <td width="5%">
                    @item.Prijs
                </td>
                <td width="30%">
                    @item.Beschrijving
                </td>
                <td width="1%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Menu" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>
                            Wijzig
                        </a>
                        <a asp-controller="Menu" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>
                            Verwijderen
                        </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>