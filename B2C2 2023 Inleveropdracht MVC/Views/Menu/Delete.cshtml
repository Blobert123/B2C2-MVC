@model Product

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Product verwijderen
			</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Naam"></label>
			<input asp-for="Naam" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Prijs"></label>
			<input asp-for="Prijs" disabled class="form-control"/>
		</div>
		<div class="mb-3">
			<label asp-for="Beschrijving"></label>
			<input asp-for="Beschrijving" disabled class="form-control"/>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Verwijderen</button>
		<a asp-controller="Menu" asp-action="Index" class="btn btn-secondary" style="width:150px">Terug</a>
	</div>
</form>