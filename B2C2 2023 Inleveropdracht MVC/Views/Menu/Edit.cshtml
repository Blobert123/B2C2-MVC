@model Product

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Product wijzigen
			</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Naam"></label>
			<input asp-for="Naam" class="form-control" />
			<span asp-validation-for="Naam" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Prijs"></label>
			<input asp-for="Prijs" class="form-control"/>
			<span asp-validation-for="Prijs" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Beschrijving"></label>
			<input asp-for="Beschrijving" class="form-control"/>
			<span asp-validation-for="Beschrijving" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Wijzigen</button>
		<a asp-controller="Menu" asp-action="Index" class="btn btn-secondary" style="width:150px">Terug</a>
	</div>
</form>