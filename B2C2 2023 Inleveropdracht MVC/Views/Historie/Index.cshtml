@model IEnumerable<Bestelling>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Jouw bestel historie</h2>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Totale prijs
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.ProductId
                </td>
                <td width="5%">
                    @item.TotaalPrijs
                </td>

            </tr>
        }
    </tbody>
</table>